MAKEFLAGS += --no-print-directory
#-I. is used to include the header files in the current directory

NAME		= philo
CC 			= cc
CFLAGS		= -Wall -Werror -Wextra -g -I.
RM 			= rm -f
MNDT 		= philo.c philo_utils.c philo_time.c philo_monitor.c \
			philo_routine.c parse_atoi.c philo_clean.c philo_checks.c \

MNDT_OBJ	=	$(MNDT:.c=.o)

# 	RULES	#
%.o: %.c
		$(CC) $(CFLAGS) -c $< -o $@

all: $(NAME)

$(NAME): $(MNDT_OBJ)
	$(CC) $(CFLAGS) $(MNDT_OBJ) -o $(NAME) || { $(MAKE) err_art; exit 1; }
	$(RM) $(MNDT_OBJ)
	@$(MAKE) text
	@$(MAKE) luna


clean:
		$(RM) $(MNDT_OBJ)
		@$(MAKE) txtcln

fclean: clean
		$(RM) $(NAME)
		@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re
.SILENT:

text:
	@echo -e '\033[1;95mðŸŒ™In the name of the moon, compile $(NAME) âœ¨\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)ðŸ§¼ \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)ðŸ§½ \033[0m'

